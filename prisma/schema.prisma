generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["extendedWhereUnique"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Signature {
  id               String     @id @default(cuid())
  signatureName    String
  signatureContent String
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  scenarios        Scenario[]
}

model Scenario {
  id                  String     @id @default(cuid())
  name                String     @unique
  scenarioType        String     @default("simple")
  subjectLine         String     @default("")
  signatureId         String?
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  customizationPrompt String?
  emailExamplesPrompt String?
  signature           Signature? @relation(fields: [signatureId], references: [id])
  prompts            Prompt[]    @relation("ScenarioPrompts")
  attachments        Attachment[]

  @@index([name])
}

model Prompt {
  id        String     @id @default(cuid())
  name      String
  content   String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  scenarios Scenario[] @relation("ScenarioPrompts")
}

model WebhookLog {
  id           String   @id @default(cuid())
  scenarioName String
  contactEmail String
  contactName  String?
  status       String   @default("success")
  errorMessage String?
  requestBody  Json
  responseBody Json?
  createdAt    DateTime @default(now())

  @@index([scenarioName])
  @@index([createdAt])
}

// Field mapping configuration for webhook data
model FieldMapping {
  id            String   @id @default(cuid())
  systemField   String   // Internal field name (e.g., "contactEmail")
  webhookField  String   // External field name (e.g., "{email}")
  description   String?  // Optional description of the field
  isRequired    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([systemField])
  @@index([webhookField])
}

model playing_with_neon {
  id    Int    @id @default(autoincrement())
  name  String
  value Float? @db.Real
}

model Attachment {
  id         String   @id @default(cuid())
  name       String
  url        String
  scenarioId String
  scenario   Scenario @relation(fields: [scenarioId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([scenarioId])
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["extendedWhereUnique"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Signature {
  id               String     @id @default(cuid())
  signatureName    String
  signatureContent String
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  scenarios        Scenario[]
}

model Scenario {
  id                  String     @id @default(cuid())
  name                String     @unique
  scenarioType        String     @default("simple")
  subjectLine         String     @default("")
  signatureId         String?
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  customizationPrompt String?
  emailExamplesPrompt String?
  signature           Signature? @relation(fields: [signatureId], references: [id])

  @@index([name])
}

model Prompt {
  id        String   @id @default(cuid())
  name      String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WebhookLog {
  id           String   @id @default(cuid())
  scenarioName String
  contactEmail String
  contactName  String?
  status       String   @default("success")
  errorMessage String?
  requestBody  Json
  responseBody Json?
  createdAt    DateTime @default(now())

  @@index([scenarioName])
  @@index([createdAt])
}

model playing_with_neon {
  id    Int    @id @default(autoincrement())
  name  String
  value Float? @db.Real
}
